function vg() {
    rg --vimgrep $@ > /tmp/vgfile
    nvim -q /tmp/vgfile
}

function cz() {
    local REPO_DIR=$(find ~/src -maxdepth 4 -type d -name ".git" | xargs dirname | fzf)
    if [ -n "$REPO_DIR" ]; then
        cd "$REPO_DIR"
    fi
}

function czz() {
    local REPO_DIR="/home/icholy/src/github.com/compassdigital/cdl"
    local SUB_DIR=$(git --git-dir $REPO_DIR/.git ls-files | grep "package\.json$\|go\.mod$\|cdktf\.json" | xargs dirname | fzf)
    if [ -n "$SUB_DIR" ]; then
        cd "$REPO_DIR/$SUB_DIR"
    fi
}

function czp() {
    local REPO_DIR="/home/icholy/src/github.com/compassdigital/cdl"
    local SUB_DIR=$(p4 list --strict=false --dir $REPO_DIR | jq -r '.dir' | fzf)
    if [ -n "$SUB_DIR" ]; then
        cd "$REPO_DIR/$SUB_DIR"
    fi
}

function bump() {
    local INC_VERSION="${1:-minor}"
    echo "npm version --no-git-tag-version $INC_VERSION";
    local TAG_NAME="$(npm version --no-git-tag-version $INC_VERSION)"
    echo "git commit -am \"chore: version $TAG_NAME\""
    git commit -am "chore: version $TAG_NAME"
    echo "git tag $TAG_NAME"
    git tag "$TAG_NAME";
}

function scratch() {
    cd $(mktemp -p /tmp -d scratch.XXXXXX)
    echo "# Scratch Created: $(date)" > README.md
    if [[ "$1" == "go" ]]; then
        go mod init scratch
    elif [[ "$1" == "node" ]]; then
        npm init -y
        echo "node_modules" > .gitignore
    elif [[ "$1" == "sdk" ]]; then
        npm init -y
        npm i -D typescript
        npm i --save @compassdigital/sdk.typescript
        npx tsc --init
        echo "node_modules" > .gitignore
    fi
    git init
    git add --all .
    git commit -m "initial commit"
    smerge .
}

function lambdaenv() {
    if [ -z "$1" ]; then
        echo "Usage: lambdaenv <lambda-function-name>"
        return 1
    fi
    
    aws lambda get-function-configuration \
        --function-name "$1" \
        --query 'Environment.Variables' \
        | jq -r 'to_entries | .[] | "\(.key)=\(.value)"'
}

function fargateenv() {
    if [ -z "$1" ]; then
        echo "Usage: fargateenv <task-name>"
        return 1
    fi

    aws ecs describe-task-definition \
        --task-definition "$1" \
        --query 'taskDefinition.containerDefinitions[0].environment' \
        | jq -r '.[] | "\(.name)=\(.value)"'
}

function lambdarole() {
    if [ -z "$1" ]; then
        echo "Usage: lambdarole <lambda-function-name>"
        return 1
    fi
    local ROLE=$(
        aws lambda get-function-configuration \
            --function-name "$1" \
            --query 'Role' \
            --output text
    )
    aws sts assume-role \
        --role-arn $ROLE \
        --role-session-name "lambdarole-$1"
}

function _xagent() {
    local agent_cmd="$1"
    local bash_cmd
    shift
    
    # Check for -w flag
    if [[ "$1" == "-w" ]]; then
        shift
        bash_cmd="WORK=\$(mktemp -p /tmp -d agent.XXXXXX) && git worktree add \$WORK && cd \$WORK && $agent_cmd $@; exec bash"
    else
        bash_cmd="$agent_cmd $@; exec bash"
    fi
    
    # Find git root, fallback to current directory if not in a git repo
    local mount_dir=$(git rev-parse --show-toplevel 2>/dev/null || echo "$PWD")
    
    docker run -it \
      --rm \
      -e DISABLE_AUTOUPDATER=1 \
      -e CLAUDE_CODE_OAUTH_TOKEN="$CLAUDE_CODE_OAUTH_TOKEN" \
      -v "$mount_dir:/workspace" \
      -w /workspace \
      -v credentials:/mnt/credentials \
      -v mise_data:/home/vscode/.local/share/mise \
      -v /var/run/docker.sock:/var/run/docker.sock \
      --group-add "$(getent group docker | cut -d: -f3)" \
      --network metamcp_metamcp-network \
      containeragent \
      bash -c "$bash_cmd"
}

alias xclaude="_xagent 'claude --dangerously-skip-permissions --model opus'"
alias xcopilot="_xagent 'copilot --allow-all-paths --allow-all-tools'"
alias xcursor="_xagent 'cursor-agent -f'"

function xconfig() {
    local docker_gid=$(getent group docker | cut -d: -f3)
    docker run -it \
      --entrypoint /entrypoint-config.sh \
      -e DISABLE_AUTOUPDATER=1 \
      -v credentials:/mnt/credentials \
      -v /var/run/docker.sock:/var/run/docker.sock \
      --group-add "$docker_gid" \
      --network metamcp_metamcp-network \
      containeragent \
      bash
}

